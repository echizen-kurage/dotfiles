# ~/bin は自作モノを置く。/usr/local/bin と /usr/local/sbin はHomebrewでインストールしたモノが入る。
export PATH="~/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11/bin"

export CLICOLOR=1
export LSCOLORS=exfxcxdxbxegedabagacad

alias emacs='open -a /Applications/Emacs.app'
# gvim : macvimをGUI + 新規タブで開く
#alias gvim='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim -g --remote-tab-silent "$@"'
alias gvim='open -a /Applications/MacVim.app "$@" &'
